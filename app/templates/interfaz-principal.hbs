 {{#if cargando}} {{cargando-componente}} {{else}}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">
        <img src="/random.png" width="30" height="30" class="d-inline-block align-top" alt=""> Meet Your Random
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">

            <li class="nav-item">
                {{#link-to 'usuarios.registro' class="nav-link"}}Realizar Registro{{/link-to}}
            </li>
        </ul>
    </div>
</nav>

<div class="row justify-content-md-center pt-5">
    <div class="col col-lg-5">
        <div class="jumbotron">

            <div class="row justify-content-md-center">
                <h1 class="display-6">Meet Your Random</h1>
            </div>

            <form>
                <div class="form-group row justify-content-md-center">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Nombre de Usuario</label>
                    <div class="col-sm-6">
                        {{input value=email type="text" class="form-control" placeholder="you@email.com"}}
                    </div>
                </div>
                <div class="form-group row justify-content-md-center">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Contraseña</label>
                    <div class="col-sm-6">
                        {{input value=password class="form-control" type="password" placeholder="Contraseña"}}
                    </div>
                </div>

                <div class="form-group row justify-content-md-center">
                    <button class="btn btn-primary" {{action 'iniciarSesion' 'password'}}>Iniciar Sesión</button>
                </div>

            </form>
        </div>
    </div>

</div>
{{/if}}
<div id="popup1" class="overlay">
    <div class="popup">
        <div>
            <strong>Mensaje:</strong>
            <p id='alerta'></p>
        </div>
        <a href="#">&times; Aceptar</a>
    </div>
</div>
<a hidden id='clickMe' href="#popup1">Click Me</a>
{{outlet}}